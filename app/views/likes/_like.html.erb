<div class="buttons">
  <div class="wrapper">
    <% if logged_in? %>
      <% if todo.like?(current_user.twitter_id) %>
        <div class="like">
          <%= button_to todo_like_path(todo, id:todo.id), method: :delete, remote: true do %>
            <%= image_tag("likes/heart.svg") %>
            <span>
              <%= todo.likes_count %>
            </span>
          <% end %>
        </div>
      <% else %>
        <div class="unlike">
          <%= button_to todo_likes_path(todo), remote: true do %>
            <%= image_tag("likes/heart.svg") %>
            <span>
              <%= todo.likes_count %>
            </span>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <%= image_tag("likes/icon_heart.svg") %>
        <span>
          <%= todo.likes_count %>
        </span>
    <% end %>
  </div>
</div>
<%= stylesheet_link_tag("likes/likes") %>



